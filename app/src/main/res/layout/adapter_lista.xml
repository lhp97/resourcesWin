<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="71dp"
            android:layout_height="34dp"
            android:text="id"
            android:textColor="#6200EE"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="5
"
            android:text="data"
            android:textColor="#6200EE"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="8dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgRam"
            android:layout_width="50dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/ram" />

        <TextView
            android:id="@+id/txtRam"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Ram"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCpu"
            android:layout_width="50dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/processor" />

        <TextView
            android:id="@+id/txtCpu"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Cpu"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDisco"
            android:layout_width="50dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/disco" />

        <TextView
            android:id="@+id/txtDisco"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Disco"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

    </LinearLayout>




 </LinearLayout>